GET     /tracklist/:id              controllers.TracklistController.view(id:Long)
PUT     /tracklist/:id              controllers.TracklistController.edit(id:Long)
DELETE  /tracklist/:id              controllers.TracklistController.delete(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

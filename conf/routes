# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

## API
######

# Users
GET     /api/user                       controllers.api.UserController.fetchAll
POST    /api/user                       controllers.api.UserController.create
GET     /api/user/:id                   controllers.api.UserController.fetch(id:Long)
PUT     /api/user/:id                   controllers.api.UserController.update(id:Long)
DELETE  /api/user/:id                   controllers.api.UserController.delete(id:Long)
POST    /api/user/login                 controllers.api.UserController.login

## Artists
GET     /api/artist                     controllers.api.ArtistController.fetchAll
POST    /api/artist                     controllers.api.ArtistController.create
GET     /api/artist/:id                 controllers.api.ArtistController.fetch(id:Long)
PUT     /api/artist/:id                 controllers.api.ArtistController.update(id:Long)
DELETE  /api/artist/:id                 controllers.api.ArtistController.delete(id:Long)

## Genres
GET     /api/genre                      controllers.api.GenreController.fetchAll
POST    /api/genre                      controllers.api.GenreController.create
GET     /api/genre/:id                  controllers.api.GenreController.fetch(id:Long)
PUT     /api/genre/:id                  controllers.api.GenreController.update(id:Long)
DELETE  /api/genre/:id                  controllers.api.GenreController.delete(id:Long)

## Labels
GET     /api/label                      controllers.api.LabelController.fetchAll
POST    /api/label                      controllers.api.LabelController.create
GET     /api/label/:id                  controllers.api.LabelController.fetch(id:Long)
PUT     /api/label/:id                  controllers.api.LabelController.update(id:Long)
DELETE  /api/label/:id                  controllers.api.LabelController.delete(id:Long)


## Channels
GET     /api/channel                    controllers.api.ChannelController.fetchAll
POST    /api/channel                    controllers.api.ChannelController.create
GET     /api/channel/:id                controllers.api.ChannelController.fetch(id:Long)
PUT     /api/channel/:id                controllers.api.ChannelController.update(id:Long)
DELETE  /api/channel/:id                controllers.api.ChannelController.delete(id:Long)

## Programs
# Fetch all programs
GET     /api/program                            controllers.api.ProgramController.fetchAll
# Fetch program by ID
GET     /api/program/:id                        controllers.api.ProgramController.fetch(id:Long)
# Fetch programs by channel
GET     /api/channel/:channelId/program         controllers.api.ProgramController.fetchByChannel(channelId:Long)
# Create a program
POST    /api/channel/:channelId/program         controllers.api.ProgramController.create(channelId:Long)
# Update/Delete a program
PUT     /api/program/:id                        controllers.api.ProgramController.update(id:Long)
DELETE  /api/program/:id                        controllers.api.ProgramController.delete(id:Long)
# Add a host to a program
POST    /api/program/:programId/host/:artistId  controllers.api.ProgramController.addHost(programId:Long, artistId:Long)


## Tracklists
GET     /api/tracklist                  controllers.api.TracklistController.fetchAll
POST    /api/tracklist                  controllers.api.TracklistController.create
GET     /api/tracklist/:id              controllers.api.TracklistController.fetch(id:Long)
PUT     /api/tracklist/:id              controllers.api.TracklistController.update(id:Long)
DELETE  /api/tracklist/:id              controllers.api.TracklistController.delete(id:Long)

## Tracks
GET     /api/track                      controllers.api.TrackController.fetchAll
POST    /api/track                      controllers.api.TrackController.create
GET     /api/track/:id                  controllers.api.TrackController.fetch(id:Long)
PUT     /api/track/:id                  controllers.api.TrackController.update(id:Long)
DELETE  /api/track/:id                  controllers.api.TrackController.delete(id:Long)



## APPLICATION
##############

# Home
GET     /                           controllers.ApplicationController.index

# Users
GET     /user                       controllers.UserController.index()
GET     /register                   controllers.UserController.registerForm()
POST    /register                   controllers.UserController.registerSubmit()
GET     /user/:id                   controllers.UserController.view(id:Long)
GET     /user/:id/edit              controllers.UserController.editForm(id:Long)
POST    /user/:id/editUser          controllers.UserController.editUserSubmit(id:Long)
POST    /user/:id/editPassword      controllers.UserController.editPasswordSubmit(id:Long)
POST    /user/:id/delete            controllers.UserController.delete(id:Long)
GET     /login                      controllers.UserController.loginForm()
POST    /login                      controllers.UserController.loginSubmit()
POST    /logout                     controllers.UserController.logout()

# Artists
GET     /artist                     controllers.ArtistController.index(page:Int ?= 1)
GET     /artist/new                 controllers.ArtistController.addForm()
POST    /artist/new                 controllers.ArtistController.addSubmit()
GET     /artist/:name               controllers.ArtistController.view(name:String)
GET     /artist/:id/edit            controllers.ArtistController.editForm(id:Long)
POST    /artist/:id/edit            controllers.ArtistController.editSubmit(id:Long)
POST    /artist/:id/delete          controllers.ArtistController.delete(id:Long)
GET     /artist/:id/tracklist       controllers.ArtistController.tracklists(id:Long, page:Int ?=1)

# Channels
GET     /channel                    controllers.ChannelController.index()
GET     /channel/new                controllers.ChannelController.addForm()
POST    /channel/new                controllers.ChannelController.addSubmit()
GET     /channel/:id                controllers.ChannelController.view(id:Long)
GET     /channel/:id/edit           controllers.ChannelController.editForm(id:Long)
POST    /channel/:id/edit           controllers.ChannelController.editSubmit(id:Long)
POST    /channel/:id/delete         controllers.ChannelController.delete(id:Long)

# Programs
GET     /channel/:id/program        controllers.ProgramController.index(id:Long)
GET     /channel/:id/program/new    controllers.ProgramController.addForm(id:Long)
POST    /channel/:id/program        controllers.ProgramController.addSubmit(id:Long)
GET     /program/:id                controllers.ProgramController.view(id:Long)
GET     /program/:id/edit           controllers.ProgramController.editForm(id:Long)
POST    /program/:id/edit           controllers.ProgramController.editSubmit(id:Long)
POST    /program/:id/delete         controllers.ProgramController.delete(id:Long)

# Genres
GET     /genre                      controllers.GenreController.index()
GET     /genre/new                  controllers.GenreController.addForm()
POST    /genre/new                  controllers.GenreController.addSubmit()
GET     /genre/:id                  controllers.GenreController.view(id:Long)
GET     /genre/:id/edit             controllers.GenreController.editForm(id:Long)
POST    /genre/:id/edit             controllers.GenreController.editSubmit(id:Long)
POST    /genre/:id/delete           controllers.GenreController.delete(id:Long)

# Labels
GET     /label                      controllers.LabelController.index()
GET     /label/new                  controllers.LabelController.addForm()
POST    /label/new                  controllers.LabelController.addSubmit()
GET     /label/:id                  controllers.LabelController.view(id:Long)
GET     /label/:id/edit             controllers.LabelController.editForm(id:Long)
POST    /label/:id/edit             controllers.LabelController.editSubmit(id:Long)
POST    /label/:id/delete           controllers.LabelController.delete(id:Long)

# Tracks
GET     /track                      controllers.TrackController.index()
GET     /track/new                  controllers.TrackController.addForm()
POST    /track/new                  controllers.TrackController.addSubmit()
GET     /track/:id                  controllers.TrackController.view(id:Long)
GET     /track/:id/edit             controllers.TrackController.editForm(id:Long)
POST    /track/:id/edit             controllers.TrackController.editSubmit(id:Long)
POST    /track/:id/delete           controllers.TrackController.delete(id:Long)

# Tracklists
GET     /tracklist                  controllers.TracklistController.index(page:Int ?= 1)
GET     /tracklist/new              controllers.TracklistController.addForm()
POST    /tracklist/new              controllers.TracklistController.addSubmit()
GET     /tracklist/:id              controllers.TracklistController.view(id:Long)
GET     /tracklist/:id/edit         controllers.TracklistController.editForm(id:Long)
POST    /tracklist/:id/edit         controllers.TracklistController.editSubmit(id:Long)
POST    /tracklist/:id/delete       controllers.TracklistController.delete(id:Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
